<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!--
        DEVELOPMENT ONLY: Allow cleartext traffic for localhost/development
        Remove or modify this for production builds
    -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Android emulator localhost -->
        <domain includeSubdomains="false">10.0.2.2</domain>
        <!-- Localhost -->
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <!-- Add your development machine IP here if testing on physical device -->
        <!-- <domain includeSubdomains="false">192.168.1.xxx</domain> -->
	<domain includeSubdomains="false">4.165.39.94</domain>
    </domain-config>

    <!--
        PRODUCTION: All other traffic requires HTTPS
        This is the default behavior for API 28+
    -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>
