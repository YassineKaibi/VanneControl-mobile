<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Circular Indicator with Valve Name inside -->
    <androidx.cardview.widget.CardView
        android:id="@+id/valveIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#E8E8E8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Use a FrameLayout to overlay text on icon -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Valve Name inside the circle -->
            <TextView
                android:id="@+id/valveNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valve 3"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="12dp" />

            <!-- Wavy lines icon -->
            <ImageView
                android:id="@+id/valveStatusIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:src="@drawable/ic_water"
                android:contentDescription="Valve Status"
                android:layout_gravity="center" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <!-- Active Status -->
    <TextView
        android:id="@+id/valveStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/active"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/valveIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time -->
    <TextView
        android:id="@+id/valveTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:30 AM"
        android:textColor="#999999"
        android:textSize="11sp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/valveStatusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
